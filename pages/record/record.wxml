<view class="panel">
<!-- 导航栏 -->
  <view class="record_top">
    <view class="{{item.isactive==1?'record_top_1active':'record_top_1'}}"  wx:for="{{recordlist}}" wx:key="item" bindtap="onChangeRecord" data-recordtopid="{{item.recordtopid}}">{{item.recordname}}</view>
  </view>
<!-- 订单 -->
<!-- wx:for和template的嵌套 -->
  <view wx:for="{{orderInfo}}">
    <view wx:if="{{(item.orderStatus==0)&&(recordlist[0].isactive==1)}}">
      <template is="recordtemplate" data="{{...item}}"></template>
    </view>

    <view wx:if="{{(item.orderStatus==1)&&(recordlist[1].isactive==1)}}">
      <template is="recordtemplate" data="{{...item}}"></template>
    </view>

    <view wx:if="{{(item.orderStatus==2)&&(recordlist[2].isactive==1)}}">
      <template is="recordtemplate" data="{{...item}}"></template>
    </view>

    <view wx:if="{{(item.orderStatus==3)&&(recordlist[3].isactive==1)}}">
      <template is="recordtemplate" data="{{...item}}"></template>
    </view>

  </view>

</view>





<!-- 新建记录(订单记录模板)的模板 -->
<template name="recordtemplate">
  <view class="record_bottom">
<!-- 座位号 在哪个屋子  消费了吗 -->
      <view class="record_bottom_1">
        <view class="record_bottom_1_1" style="display: inline-block;">公共区 {{orderSeatId}}</view>
        <view class="record_bottom_1_2" style="display: inline-block;">未消费</view>
      </view>
<!-- 什么期间  查询座位开始/结束时间  持续时间 -->
      <view class="record_bottom_2">
      <!-- 1 -->
        <view class="in_record_bottom_2">
          <view class="in_record_bottom_2_1_1">2022-04-23</view>
          <view class="in_record_bottom_2_1_2">00:00</view>
        </view>
        <!-- 2 -->
        <view class="in_record_bottom_2">
          <view class="in_record_bottom_2_2_1">{{bespeakduration}}小时</view>
          <view class="in_record_bottom_2_2_2">————></view>
        </view>
        <!-- 3 -->
        <view class="in_record_bottom_2">
          <view class="in_record_bottom_2_3_1">2022-04-23</view>
          <view class="in_record_bottom_2_3_2">00:30</view>
        </view>
      </view>
<!-- 支付时间 -->
      <view class="record_bottom_3">支付时间 : {{createTime}}</view>
<!-- 扫码开门 或者显示未到使用时间   ，取消预约-->
      <view class="record_bottom_4">
        <view class="in_record_bottom_4_1">未到使用时间</view>
      </view>
      <view class="record_bottom_5">
        <view class="in_record_bottom_5_1">取消预约</view>
      </view>
    </view>
</template>